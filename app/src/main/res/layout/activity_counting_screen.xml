<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    tools:context=".CountingScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="286dp"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="15sp"
            android:padding="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/zero"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="0"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/one"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="0"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="0"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/three"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="0"
                android:layout_column="3" />

            <ImageView
                android:id="@+id/four"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="1"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="1"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/six"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="1"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/seven"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="1"
                android:layout_column="3" />

            <ImageView
                android:id="@+id/eight"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="2"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/nine"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="2"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/ten"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="2"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/eleven"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="2"
                android:layout_column="3" />

            <ImageView
                android:id="@+id/twelve"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="3"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/thirteen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="3"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/fourteen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="3"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/fifteen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="3"
                android:layout_column="3" />


            <ImageView
                android:id="@+id/sixteen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="4"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/seventeen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="4"
                android:layout_column="1" />

            <ImageView
                android:id="@+id/eighteen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="4"
                android:layout_column="2" />

            <ImageView
                android:id="@+id/nineteen"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_row="4"
                android:layout_column="3" />

        </GridLayout>

        <EditText
            android:id="@+id/input_box"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="141dp"
            android:background="@drawable/rounded_corners_white"
            android:ems="10"
            android:hint="Enter\nanswer"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.76" />

        <Button
            android:id="@+id/check_button"
            android:layout_width="176dp"
            android:layout_height="90dp"
            android:layout_below="@+id/input_box"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="110dp"
            android:background="@drawable/purple_button"
            android:text="Check Answer!"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/question"
            android:layout_width="235dp"
            android:layout_height="92dp"
            android:layout_below="@+id/gridLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="88dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="259dp"
            android:layout_height="0dp"
            android:layout_below="@+id/check_button"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="82dp"
            android:text="TextView" />

    </RelativeLayout>
</ScrollView>